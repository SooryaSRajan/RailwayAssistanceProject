<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Registration.QRCodeActivity">

    <TextView
        android:id="@+id/qr_main_text"
        android:text="QR Code"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginLeft="70dp"
        android:textAlignment="center"
        android:layout_marginRight="70dp"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_below="@+id/qr_main_text"
        android:id="@+id/qr_hint_text"
        android:text="Scan this QR code to redirect to registration page to create an account for reserving tickets, or say 'cancel' go back"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginLeft="70dp"
        android:textAlignment="center"
        android:layout_marginRight="70dp"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:src="@drawable/qr_trial"
        android:id="@+id/qr_image"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/qr_hint_text"
        android:layout_centerInParent="true"
        android:layout_width="350dp"
        android:layout_height="350dp"/>

    <TextView
        android:id="@+id/qr_timer"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-condensed-medium"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/qr_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>